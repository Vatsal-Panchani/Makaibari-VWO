    el.style.padding = '8px 10px';               // horizontal padding for breathing space
    el.style.fontSize = '12px';
    el.style.margin = '4px';
    el.style.fontFamily = 'Novecento Sans, sans-serif';
    el.style.fontWeight = '600';                 // semi-bold
    el.style.whiteSpace = 'nowrap';              // keep text on one line
  });
  document.querySelectorAll('.product__info-container .product-form, .product__info-container .product__description')
  .forEach(el => {
    el.style.marginBottom = '0';
  });
  document.querySelectorAll('.payment-subscription-button')
  .forEach(el => {
    el.style.marginTop = '0';
  });
  
  createCustomQuantitySelector();
  const observer = new MutationObserver((mutationsList, observer) => {
    const recurpayContainer = document.querySelector('div[for="recurpay__onetime_radio"]');
    if (recurpayContainer) {
      movePurchaseButtons();
      observer.disconnect();
    }
  });
  const productHeading = document.querySelector('.product__info-wrapper h1');
if (productHeading) {
  productHeading.style.fontSize = '24px';
}
  observer.observe(document.body, { childList: true, subtree: true });
  const initialRecurpayContainer = document.querySelector('div[for="recurpay__onetime_radio"]');
  if (initialRecurpayContainer) {
    movePurchaseButtons();
    observer.disconnect();
  }
  
  const askQuestion = document.querySelector('.ask-a-question');
const productButtons = document.querySelector('.product-form__buttons');
if (askQuestion && productButtons) {
  // Move below product-form__buttons
  productButtons.insertAdjacentElement('afterend', askQuestion);
  // Force text color change
  askQuestion.style.setProperty('color', '#565D50', 'important');
}
  
  document.addEventListener("DOMContentLoaded", function () {
  
  // 5. Remove the "REVIEWS" tab button
  const reviewsTab = document.querySelector('li[data-id="tab-reviews"]');
  if (reviewsTab) {
    reviewsTab.remove();
  }
  // 6. Move the reviews container into the description section
  const reviewsContainer = document.getElementById('opinew-reviews-product-page-code');
  const descriptionContainer = document.getElementById('tab-description');
  if (reviewsContainer && descriptionContainer) {
    // Optional: add a heading above the reviews
    const heading = document.createElement('h2');
    heading.textContent = 'Reviews';
    heading.style.marginTop = '4rem';
    heading.style.fontSize = '16px';
    heading.style.fontWeight = 'bold';
    heading.style.color = '#565D50';
    heading.style.textTransform = 'uppercase';
    heading.style.fontFamily = 'Futura, sans-serif';
    heading.style.textAlign = 'center';
    heading.style.width = '80px';
    heading.style.margin = '0 auto';
    heading.style.borderBottom = '1px solid #565D50';
    heading.style.padding = '7px';
    // Append heading and reviews container to the end of the description
    descriptionContainer.appendChild(heading);
    descriptionContainer.appendChild(reviewsContainer);
  }
});
// 5. Remove the "REVIEWS" tab button
  const reviewsTab = document.querySelector('li[data-id="tab-reviews"]');
  if (reviewsTab) {
    reviewsTab.remove();
  }
  // 6. Move the reviews container into the description section
  const reviewsContainer = document.getElementById('opinew-reviews-product-page-code');
  const descriptionContainer = document.getElementById('tab-description');
  if (reviewsContainer && descriptionContainer) {
    // Optional: add a heading above the reviews
    const heading = document.createElement('h2');
    heading.textContent = 'Reviews';
    heading.style.marginTop = '4rem';
    heading.style.fontSize = '16px';
    heading.style.fontWeight = 'bold';
    heading.style.letterSpacing = '3px';
    heading.style.color = '#565D50';
    heading.style.textTransform = 'uppercase';
    heading.style.fontFamily = 'Futura, sans-serif';
    heading.style.textAlign = 'center';
    heading.style.textDecoration = 'underline'; 
    // Append heading and reviews container to the end of the description
    descriptionContainer.appendChild(heading);
    descriptionContainer.appendChild(reviewsContainer);
  }
};
// --- SCRIPT EXECUTION ---
/**
 * Checks if the current browser is a mobile device based on the user agent string.
 * @returns {boolean} True if a mobile device is detected, otherwise false.
 */
const isMobileDevice = () => {
  // A dynamic regex to detect a wide range of mobile devices.
  const mobileRegex = /Mobi|Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i;
  return mobileRegex.test(navigator.userAgent);
};
// *** MODIFIED PART: Only run the script on mobile devices ***
if (isMobileDevice()) {
  //   console.log("Mobile device detected. Initializing custom product page script.");
  // Run the entire setup function once the DOM is fully loaded.
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupProductPage);
  } else {
    // DOM is already ready, execute immediately
    setupProductPage();
  }
} else {
  //   console.log("Desktop device detected. Custom product page script will not run.");
}
