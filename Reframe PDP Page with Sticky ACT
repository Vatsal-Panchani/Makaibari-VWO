  };
  
  /* --BEST SELLER BADGE (Elegant Style)-- */
(function () {
  const bestSellerPages = [
     "/products/special-edition-himalayan-spring",
     "/products/summer-solstice-muscatel",
     "/products/garden-harvest-loose-organic-black-brokens",
     "/products/springtime-bloom-1",
     "/products/apoorba-tips-chestlet-1",
     "/products/summer-solstice-muscatel-tin-caddy",
     "/products/apoorva-green-pouch",
     "/products/golden-bru",
     "/products/silver-tips-imperial-darjeeling-full-moon-handmade-tea",
