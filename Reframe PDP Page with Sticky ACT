  }
`;
    document.head.appendChild(style);
  });
})();
  // --- 2. CREATE CUSTOM QUANTITY SELECTOR ---
  const createCustomQuantitySelector = () => {
    const originalQuantitySelector = document.querySelector('[id^="product-form-template"] .quantity-addtocart-container select');
    const insertionTarget = document.querySelector('[id^="product-form-template"] .product-form__buttons');
    if (originalQuantitySelector && insertionTarget && !document.querySelector('.custom-quantity-container')) {
      if (originalQuantitySelector.closest('.quantity-addtocart-container')) {
        originalQuantitySelector.closest('.quantity-addtocart-container').style.display = 'none';
      }
      const options = originalQuantitySelector.querySelectorAll('option');
      const maxQuantity = options.length > 0 ? parseInt(options[options.length - 1].value) : 10;
      const quantityContainer = document.createElement('div');
      quantityContainer.className = 'custom-quantity-container';
      const minusButton = document.createElement('button');
      minusButton.type = 'button';
      minusButton.className = 'quantity-button';
      minusButton.innerHTML = '-';
      const quantityInput = document.createElement('input');
      quantityInput.type = 'number';
      quantityInput.className = 'quantity-input';
      quantityInput.value = originalQuantitySelector.value;
      quantityInput.min = '1';
      quantityInput.max = maxQuantity;
      const plusButton = document.createElement('button');
      plusButton.type = 'button';
      plusButton.className = 'quantity-button';
      plusButton.innerHTML = '+';
      quantityContainer.appendChild(minusButton);
      quantityContainer.appendChild(quantityInput);
      quantityContainer.appendChild(plusButton);
      insertionTarget.parentNode.insertBefore(quantityContainer, insertionTarget);
      const updateOriginalSelector = () => {
        originalQuantitySelector.value = quantityInput.value;
        originalQuantitySelector.dispatchEvent(new Event('change', { bubbles: true }));
      };
      minusButton.addEventListener('click', () => {
        if (parseInt(quantityInput.value) > 1) {
          quantityInput.value = parseInt(quantityInput.value) - 1;
          updateOriginalSelector();
        }
      });
      plusButton.addEventListener('click', () => {
        if (parseInt(quantityInput.value) < maxQuantity) {
          quantityInput.value = parseInt(quantityInput.value) + 1;
          updateOriginalSelector();
        }
      });
      quantityInput.addEventListener('change', () => {
        let currentValue = parseInt(quantityInput.value);
        if (currentValue > maxQuantity) {
          quantityInput.value = maxQuantity;
        } else if (currentValue < 1 || isNaN(currentValue)) {
          quantityInput.value = 1;
        }
        updateOriginalSelector();
      });
    }
  };
  // --- 3. MOVE PURCHASE BUTTONS INTO SUBSCRIPTION WIDGET ---
  const movePurchaseButtons = () => {
    const addToCartWrapper = document.querySelector('[id^="product-form-template"] .quantity-addtocart-container');
    const buyNowWrapper = document.querySelector('[id^="product-form-template"] .payment-subscription-button');
    const oneTimePurchaseContainer = document.querySelector('div[for="recurpay__onetime_radio"]');
    if (addToCartWrapper && buyNowWrapper && oneTimePurchaseContainer) {
      if (oneTimePurchaseContainer.querySelector('.custom-button-container')) return;
      const buttonContainer = document.createElement("div");
      buttonContainer.classList.add("custom-button-container");
      const addToCartButton = addToCartWrapper.querySelector('button');
      const buyNowButton = buyNowWrapper.querySelector('button');
      if (addToCartButton) buttonContainer.appendChild(addToCartButton);
      if (buyNowButton) buttonContainer.appendChild(buyNowButton);
      oneTimePurchaseContainer.appendChild(buttonContainer);
      //   console.log("Buttons moved for one-time purchase.");
    } else {
      console.warn("Could not find required elements to move purchase buttons.");
    }
  };
  // --- 4. INITIALIZE AND OBSERVE ---
  injectStyles();
  document.querySelectorAll('.product__info-container > * + *').forEach(el => {
    el.style.marginTop = '1rem';
    el.style.marginBottom = '1rem';
  });
  function applyPriceStyles() {
  document.querySelectorAll('.price-item.price-item--regular').forEach(el => {
    el.style.fontSize = '2.4rem';
    el.style.fontWeight = '700';
    el.style.lineHeight = '1.3';
  });
}
// Initial call
applyPriceStyles();
// Observe the whole document for any price updates
const globalObserver = new MutationObserver(() => {
  applyPriceStyles();
});
globalObserver.observe(document.body, { childList: true, subtree: true });
  document.querySelectorAll('.mb-10').forEach(el => {
    el.style.marginTop = '0px';
    el.style.marginBottom = '5px';
    el.style.textAlign = 'left';
    // Apply the same to inner <p> if it exists
    const p = el.querySelector('p');
    if (p) {
      p.style.margin = '0';           // remove default margin
      p.style.textAlign = 'left';     // ensure left alignment
      p.style.fontSize = '13px';      // optional: match text style
      p.style.lineHeight = '1.4';     // optional: improve readability
    }
  });
  document.querySelectorAll('.shop-as-options-metafields-wraper legend.form__label').forEach(el => {
    el.style.fontSize = '13px';
    el.style.letterSpacing = '1px';
  });
  document.querySelectorAll('fieldset.js.product-form__input').forEach(el => {
    el.style.marginBottom = '5px';
  });
  document.querySelectorAll('input[type=radio]+label').forEach(el => {
    el.style.display = 'inline-block';           // allows width to fit content
    el.style.padding = '6px 10px';               // horizontal padding
